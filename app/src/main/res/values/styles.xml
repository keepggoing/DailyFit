<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 툴바 타이틀: bold -->
    <style name="MyToolbarTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- 버튼 통일 스타일 -->
    <style name="DailyFit.MenuButton" parent="Widget.Material3.Button.TextButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:backgroundTint">@android:color/white</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- inline DatePicker 전용 테마 -->
    <style name="InlineDatePickerTheme" parent="Theme.MaterialComponents.Light">
        <!-- ✅ 헤더 바 배경을 검정으로 -->
        <item name="colorPrimary">#000000</item>
        <item name="android:colorPrimary">#000000</item>
        <item name="colorSurface">#000000</item> <!-- 핵심 추가 -->
        <item name="colorOnSurface">#FFFFFF</item> <!-- 헤더 내 텍스트가 잘 보이도록 흰색 -->

        <!-- 선택된 날짜 원 색을 핑크로 -->
        <item name="colorSecondary">#EB7997</item>
        <item name="android:colorAccent">#EB7997</item>

        <!-- 달력 숫자·요일 텍스트 색을 검정으로 고정 -->
        <item name="android:calendarTextColor">#000000</item>
    </style>

</resources>
